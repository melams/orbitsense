<div id="login_pane" style="position:relative; top:50px; background-color:rgba(200, 200, 255, 0.35);width:75%; padding:40px;float:right; max-width: 500px ">
	<h2 class="page-header">Account Login</h2>
	<form method="post" action="/users/login">
	  <div class="form-group">
	    <label>Username</label>
	    <input type="text" class="form-control" name="username" placeholder="Username">
	  </div>
	  <div class="form-group">
	    <label>Password</label>
	    <input type="password" class="form-control" name="password" placeholder="Password" style=" background-color:rgba(255, 255, 255, 0.7);">
	  </div>
	  <button type="submit" class="btn btn-default">Submit</button>
	</form>
</div>

<script>
	$(function() {
		$("#login_pane").hide().delay(500).slideDown(800);
	});
</script>